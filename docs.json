{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "City of Oak Point",
  "description": "Official documentation and resources for the City of Oak Point - serving our community with transparency and excellence.",
  "colors": {
    "primary": "#2F5D3E",
    "light": "#4A7C5C",
    "dark": "#1B3D2A"
  },
  "fonts": {
    "heading": {
      "family": "Libre Baskerville",
      "source": "https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap",
      "weight": 700
    },
    "body": {
      "family": "Source Sans Pro", 
      "source": "https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,300;0,400;0,600;0,700;1,400&display=swap",
      "weight": 400
    }
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "background": {
    "decoration": "grid",
    "color": {
      "light": "#F8FAF9",
      "dark": "#0F1611"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "/"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "City Calendar",
          "href": "https://oakpoint.gov/calendar",
          "icon": "calendar-days",
          "color": {
            "light": "#2F5D3E",
            "dark": "#4A7C5C"
          }
        },
        {
          "anchor": "Contact City Hall",
          "href": "mailto:info@oakpoint.gov",
          "icon": "building-columns",
          "color": {
            "light": "#2F5D3E", 
            "dark": "#4A7C5C"
          }
        },
        {
          "anchor": "Emergency Services",
          "href": "tel:911",
          "icon": "siren-on",
          "color": {
            "light": "#DC2626",
            "dark": "#EF4444"
          }
        }
      ]
    },
    "tabs": [
      {
        "tab": "City Services",
        "icon": "hand-holding-heart",
        "groups": [
          {
            "group": "Essential Services",
            "pages": [
              "services/overview",
              "services/permits-licenses",
              "services/utilities",
              "services/public-works"
            ]
          },
          {
            "group": "Public Safety",
            "pages": [
              "safety/police-department",
              "safety/fire-department", 
              "safety/emergency-management",
              "safety/code-enforcement"
            ]
          },
          {
            "group": "Community Resources",
            "pages": [
              "community/parks-recreation",
              "community/library",
              "community/senior-services",
              "community/youth-programs"
            ]
          }
        ]
      },
      {
        "tab": "Government",
        "icon": "building-columns",
        "groups": [
          {
            "group": "Leadership",
            "pages": [
              "government/mayor",
              "government/city-council",
              "government/city-manager",
              "government/department-heads"
            ]
          },
          {
            "group": "Meetings & Records",
            "pages": [
              "government/council-meetings",
              "government/meeting-minutes",
              "government/public-records",
              "government/ordinances"
            ]
          },
          {
            "group": "Transparency",
            "pages": [
              "government/budget-finance",
              "government/annual-reports",
              "government/procurement",
              "government/open-government"
            ]
          }
        ]
      },
      {
        "tab": "Business",
        "icon": "briefcase",
        "groups": [
          {
            "group": "Starting a Business",
            "pages": [
              "business/business-licenses",
              "business/zoning-planning",
              "business/building-permits",
              "business/tax-information"
            ]
          },
          {
            "group": "Development",
            "pages": [
              "business/economic-development",
              "business/development-incentives",
              "business/site-selection",
              "business/development-process"
            ]
          }
        ]
      },
      {
        "tab": "Residents",
        "icon": "house",
        "groups": [
          {
            "group": "Living in Oak Point",
            "pages": [
              "residents/new-residents",
              "residents/neighborhoods",
              "residents/schools",
              "residents/healthcare"
